---
import { getCollection } from 'astro:content'
import Layout from '@/layouts/Layout.astro'
const posts = await getCollection('posts')
---

<Layout title="posts">
  <main class="bg-gray-100 px-4 py-12 sm:px-6 lg:px-8">
    <h1 class="neumorphic-text mb-12 text-center text-4xl font-bold text-gray-800">Posts</h1>
    <div class="flex flex-wrap justify-center gap-y-8">
      {
        posts.map((post) => (
          <article class="neumorphic-card w-full max-w-4xl rounded-xl bg-gray-100 p-8">
            <h2 class="mb-4 text-xl font-bold text-gray-800">{post.data.title}</h2>
            <div class="markdown">{post.data.body}</div>
          </article>
        ))
      }
    </div>
  </main>
</Layout>
